<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9DE"
    android:orientation="vertical"
    tools:context="com.app.xz.mynote.function.appnote.activity.NoteDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/note_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_edit_note" />
    </LinearLayout>

    <com.app.xz.mynote.publics.views.EditTextPlus
        android:id="@+id/note_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:editable="false"
        android:gravity="top"
        android:lineSpacingExtra="2dp"
        android:padding="20dp"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>
